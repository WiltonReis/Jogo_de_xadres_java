   <children>
      <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button fx:id="themesMenuItem" mnemonicParsing="false" onAction="#openThemeMenu" text="Temas" />
