               </content>
            </ScrollPane>
         </top>
         <bottom>
            <ScrollPane fitToWidth="true" hbarPolicy="ALWAYS" styleClass="captured-pieces-scrollpane" vbarPolicy="NEVER" BorderPane.alignment="CENTER">
               <content>
                  <HBox fx:id="capturedPiecesBlack" prefHeight="65.0" prefWidth="768.0" styleClass="captured-pieces-area" />
               </content>
            </ScrollPane>
         </bottom>
         <center>
            <StackPane fx:id="mainPane" prefHeight="480.0" prefWidth="480.0" BorderPane.alignment="CENTER">
               <children>
                  <GridPane fx:id="chessBoard" prefHeight="480.0" prefWidth="480.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0" />
                     </columnConstraints>
